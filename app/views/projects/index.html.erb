<% title( "Projects")%>
<% menu('project') %>
<div style="margin-left: auto; margin-right: auto;width: 340px;padding: 40px; padding-top: 20px;">
<h2>Listing projects</h2>
<div class="form" style="width: 340px;text-align: center;font-size: 20px;">
<span class="plus">+</span> <%= link_to 'Add Project', new_project_path %>
</div>
<br/>
<% @projects.each do |project| %>
<div class="form" style="width: 340px;">
  <div style="float:left; height: 80px;">
    <img src="/images/coffeecup-espresso-small.png" height="70px"></div>
<span style="margin:0px; margin-left: 20px; width: 240px; float:left; display:inline;">
  <h1 style="margin:0px"><%= link_to project.name, project %></h1>
&nbsp;&nbsp;by <%= project.owner.name unless project.owner.nil?%><br/>

<% if project.owner == current_user %>
<br/>
  <%= link_to 'Sprints', project_sprints_path(project), :class=>"button" %>  
  <%= link_to 'Edit', edit_project_path(project), :class=>"button" %> 
  <%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete , :class=>"button"%>

<% end %>
</span>
<br clear="both"/>
</div>
<% end %>

</div>