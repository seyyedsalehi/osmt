<% title("#{@project.name} sprints") %>
<% menu('sprints') %>

<div style="margin-left: auto; margin-right: auto;width: 300px;padding: 40px; padding-top: 20px;">
<h1><%= @project.name%> sprints</h1>
<% if @project.owner == current_user %>
<div class="form" style="width: 220px;text-align: center;font-size: 20px;">
  <span class="plus">+</span> <%= link_to 'Add Sprint', new_project_sprint_path(@project) %>
</div>
<% end %>
<br/>
<% @sprints.each do |sprint| %>
<%= render :partial => 'sprint', :locals=>{:sprint => sprint, :project => @project}%>
<% end %>




</div>